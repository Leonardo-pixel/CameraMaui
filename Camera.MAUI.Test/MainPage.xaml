<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Camera.MAUI.Test.MainPage"
             x:Name="cameraExample" Background="white">
    <ScrollView>
        <Grid>
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="5" Spacing="10">
                <Button Text="Go to MVVM Cam" Clicked="Button_Clicked_MVVM"/>
                <Button Text="Go to Parameters Cam" Clicked="Button_Clicked_Params"/>
                <Button Text="Go to Fullscreen Cam" Clicked="Button_Clicked_Fullscreen"/>
                <Button Text="Go to Code generation" Clicked="Button_Clicked_CodeGen"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
